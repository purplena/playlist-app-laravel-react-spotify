{
	"name": "Laravel React App",
	"image": "mcr.microsoft.com/devcontainers/php:8.2-bullseye",
	"features": {
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		},
		"ghcr.io/devcontainers/features/mysql:1": {
			"version": "latest"
		}
	},
	"forwardPorts": [
		8000,
		5173
	],
	"portsAttributes": {
		"8000": {
			"label": "Application (Laravel)",
			"onAutoForward": "openBrowser"
		},
		"5173": {
			"label": "Vite Dev Server"
		}
	},
	"postCreateCommand": "composer install && npm install",
	"postAttachCommand": {
		"server": "php artisan serve --host=0.0.0.0 --port=8000 & npm run dev"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"bradlc.vscode-tailwindcss"
			]
		}
	},
	"remoteUser": "vscode"
}